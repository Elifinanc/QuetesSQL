INSERT INTO [Earthling] ([name], continent) VALUES ('Irene', 'Amerique')
INSERT INTO [Earthling] ([name], continent) VALUES ('Aurelia', 'Asie')
INSERT INTO [Earthling] ([name], continent) VALUES ('Etienne', 'Europe')
INSERT INTO [Earthling] ([name], continent) VALUES ('Antoine', 'Afrique')

GO

SELECT m.[name], e.[name], e.[continent], m.[base]
FROM Martians AS m
INNER JOIN Earthling AS e
ON m.idEarthling=e.idEarthling;

GO
